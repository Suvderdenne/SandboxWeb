  <script>
    const signInPanel = document.getElementById('sign-in-panel');
    const signUpPanel = document.getElementById('sign-up-panel');
    const toSignup = document.getElementById('to-signup');
    const toSignin = document.getElementById('to-signin');

    function showSignInView(){ signInPanel.style.display = 'flex'; signUpPanel.style.display = 'none'; }
    function showSignUpView(){ signInPanel.style.display = 'none'; signUpPanel.style.display = 'flex'; }

    if(window.innerWidth<=900){ signInPanel.style.display='flex'; signUpPanel.style.display='flex'; } else { signUpPanel.style.display='none'; signInPanel.style.display='flex'; }

    toSignup.addEventListener('click', showSignUpView);
    toSignin.addEventListener('click', showSignInView);
    function setSplineScene(sceneIdentifier){
      const iframe = document.getElementById('spline-embed');
      if(!iframe) return;
      if(sceneIdentifier.startsWith('http')) iframe.src = sceneIdentifier;
      else iframe.src = `https://my.spline.design/${sceneIdentifier}/`;
    }
  </script>
